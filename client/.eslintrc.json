{
    "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:security-node/recommended", "plugin:security/recommended-legacy"],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2022,
      "ecmaFeatures": {
        "jsx": true,
        "staticClassProperty": true
      }
    },
    "globals": {
      "Map": "readonly"
    },
    "plugins": ["no-unsanitized", "xss", "security-node", "react-hooks"],
    "rules": {
      "no-unsanitized/method": "error",
      "no-unsanitized/property": "error",
      "xss/no-mixed-html": "error",
      "xss/no-location-href-assign": "error",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    },
    "env": {
      "browser": true,
      "node": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "overrides": [
      {
        "files": ["src/**/*.js", "src/**/*.jsx"],
        "excludedFiles": "*.test.js",
        "rules": {
          "no-unsanitized/method": ["error", {
            "additionalTags": ["<MyCustomTag>"]
          }],
          "no-unsanitized/property": ["error", {
            "additionalTags": ["<MyCustomTag>"]
          }]
        }
      }
    ]
  }
  